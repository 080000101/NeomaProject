<form method="post" action="{{ path('contact_delete', {'id': contact.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce contact ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
    <button class="delete-btn"><img class="delete-logo" src="{{ asset('build/images/delete-logo.png') }}" alt="ACME delete logo"></button>
</form> 
