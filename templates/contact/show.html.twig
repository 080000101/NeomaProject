{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

    <div class="show-background">

        <div class="show-entÃªte">
        
            <div class="profil-logo">
                <img class="profil-picture" src="{{ asset('build/images/profil-icon.png') }}" alt="ACME logo">
            </div>

            <h1 class="show-title">{{ contact.firstname }} {{ contact.lastname }}</h1>

        </div>

        <div class="show-scroll">
            <div class="show-form">
                <form>
                    <div>
                        <label for="number"></label>
                        <input class="show-input" type="text" id="phone_number" value="{{ contact.phoneNumber }}">
                    </div>
                    <div>
                        <label for="email"></label>
                        <input class="show-input" type="email" id="email" value="{{ contact.email }}">
                    </div>
                    <div>
                        <label for="adresse"></label>
                        <input class="show-input" type="text" id="adresse" value="{{ contact.adress }}">
                    </div>
                    <div>
                        <label for="city"></label>
                        <input class="show-input" type="text" id="city" value="{{ contact.city }}">
                    </div>
                    <div>
                        <label for="country"></label>
                        <input class="show-input" type="text" id="country" value="{{ contact.country }}">
                    </div>
                </form>
            </div>
        </div>

        <a class="edit-btn" href="{{ path('contact_edit', {'id': contact.id}) }}"><img class="edit" src="{{ asset('build/images/edit-logo.png') }}" alt="ACME edit logo"></a>

        {{ include('contact/_delete_form.html.twig') }}

        <a class="return-btn"href="{{ path('contact_index') }}"><img class="retour" src="{{ asset('build/images/retour.png') }}" alt="ACME retour"></a> 

    </div>

{% endblock %}
