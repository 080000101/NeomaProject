{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="show-background">

        <div class="show-container">

            <div class="show-entête">
                <h1 class="category-show-title">Catégorie : {{ category.name }}</h1>
            </div>

            <div class="category-scroll">
                {% for contact in contacts %}
                    <div class="infos">
                        {# <h4>{{ contact.id }}</h4> #}
                        <div class="h4"> 
                            <input type="checkbox" class="checkbox" name="checkbox" value="{{ contact.id }}">
                            <img class="profil-icon" src="{{ asset('build/images/profil-icon.png') }}" alt="ACME profil icon">
                            <a class="name-link" href="{{ path('contact_show', {'id': contact.id}) }}"><h4 class="name">{{ contact.firstname }} {{ contact.lastname }}</h4></a>
                        </div>
                        <div class="actions-btn">
                            <a href="{{ path('contact_edit', {'id': contact.id}) }}"><img class="edit-logo" src="{{ asset('build/images/edit-logo.png') }}" alt="ACME edit logo"></a>
                        </div>
                    </div>
                {% else %}
                    <h4 class="empty-title">Cette catégorie ne contient aucun contact</h4>
                {% endfor %}
            </div>

            <a class="category-save" href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
            
        </div>
        
        <a class="return-btn"href="{{ path('category_index') }}"><img class="retour" src="{{ asset('build/images/retour.png') }}" alt="ACME retour"></a> 
        
        {{ include('category/_delete_form.html.twig') }}

    </div>

{% endblock %}
