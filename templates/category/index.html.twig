{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="list-background">

        <div class="top-page">
            <h1 class="category-title">Liste des cat√©gories</h1>
        </div>

        <div class="infos-background">

            <div class="infos-container">
                {% for category in categories %}
                    <div class="infos">
                        {# <h4>{{ category.id }}</h4> #}
                        <div class="h4"> 
                            <h4 class="name">{{ category.name }}</h4>
                        </div>
                        <div class="actions-btn">
                            <a href="{{ path('category_edit', {'id': category.id}) }}"><img class="edit-logo" src="{{ asset('build/images/edit-logo.png') }}" alt="ACME edit logo"></a>
                        </div>
                    </div>
                {% else %}
                    <h4 class="empty-title">+ Ajoutez de nouvelles categories</h4>
                {% endfor %}
            </div>

        </div>

        <a class="return-btn"href="{{ path('contact_index') }}"><img class="retour" src="{{ asset('build/images/retour.png') }}" alt="ACME retour"></a>

        <a class="create-btn" href="{{ path('category_new') }}"><img class="logo-plus" src="{{ asset('build/images/logo-plus.png') }}" alt="ACME logo plus"></a>

    </div>

{% endblock %}
